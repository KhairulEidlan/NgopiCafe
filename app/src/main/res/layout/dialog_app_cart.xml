<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/lblTitleWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:text="Do you want to delete order menu or remove one?"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>
    
    <View
        android:id="@+id/borderHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lblTitleWarning"
        android:layout_marginTop="20dp"
        android:background="@android:color/black"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/borderHorizontal"
        android:layout_alignParentStart="true"
        android:stretchColumns="*">

        <TableRow
            android:divider="@drawable/table_divider"
            android:showDividers="middle">
            <Button
                android:id="@+id/btnAll"
                android:background="@android:color/transparent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Delete Menu"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnOne"
                android:background="@android:color/transparent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Remove One"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>




</RelativeLayout>