<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ngopi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/icon_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NgopiCafe">
        <activity
            android:name=".admin.AdminRequestOrder"
            android:exported="true" />
        <activity
            android:name=".apps.AppSearchActivity"
            android:exported="true" />
        <activity
            android:name=".admin.EditAdminMenu"
            android:exported="true" />
        <activity
            android:name=".admin.AdminCategory"
            android:exported="true" />
        <activity
            android:name=".apps.AppOrderHistoryActivity"
            android:exported="true" />
        <activity
            android:name=".apps.AppPaymentActivity"
            android:exported="false" />
        <activity
            android:name=".apps.AppCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".apps.AppMainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".admin.AdminDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".loginsignup.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".loginsignup.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>